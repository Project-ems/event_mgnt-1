@model Event_Management_System_Userview.Models.Registration


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>

<body>
    <div class="panel panel-success" style="width:40% ;margin-left:220px;margin-top:60px">
        <div class="panel-heading text-center"><h2>Login page</h2></div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()

                <div class="form-group">
                    <p> UserName:@Html.TextBoxFor(x => x.User_Name, new { @class = "form-control" })</p>
                </div>

                <div class="form-group">
                    <p>Password :@Html.TextBoxFor(x => x.Password, new { @class = "form-control" })</p>
                </div>


                <div class="text-center" style="">
                    <button value="Submit" class=" btn btn-info glyphicon glyphicon-user ">Login</button>
                </div>
            }

        </div>
    </div>
</body>
</html>
