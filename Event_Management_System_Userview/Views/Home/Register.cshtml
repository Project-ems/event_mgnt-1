@model Event_Management_System_Userview.Models.Registration


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="/Scripts/modernizr-2.6.2.js"></script>
    <title>Register</title>
</head>

<body>
    <div class="panel panel-success" style="width:40% ;margin-left:230px;margin-top:60px">
        <div class="panel-heading text-center"><h2>Registration page</h2></div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()

                <div class="form-group">
                    <p> UserName:@Html.TextBoxFor(x => x.User_Name, new { @class = "form-control" })</p>
                </div>
                <div class="form-group">
                    <p> EmailID:@Html.TextBoxFor(x => x.Email_ID, new { @class = "form-control" })</p>
                </div>
                <div class="form-group">
                    <p>Password :@Html.TextBoxFor(x => x.Password, new { @class = "form-control" })</p>
                </div>
                <div class="form-group">
                    <p> ConfirmPassword :@Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control" })</p>
                </div>
                <div class="form-group">
                    <p> City:@Html.TextBoxFor(x => x.City, new { @class = "form-control" })</p>
                </div>
                <div class="form-group">
                    <p> Contact Number:@Html.TextBoxFor(x => x.ContactNumber, new { @class = "form-control" })</p>
                </div>

                <div class="text-center" style="">
                    <button value="Submit" class=" btn btn-info glyphicon glyphicon-user ">Submit</button>

                </div>

            }
        </div>
    </div>
</body>
</html>
